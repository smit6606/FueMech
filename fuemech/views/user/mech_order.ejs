<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">

    <script src="/js/main.js"></script>
    <link rel="stylesheet" href="/css/main.css">


  <!-- Vendor CSS Files -->
  <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
  <link href="/vendor/aos/aos.css" rel="stylesheet">
  <link href="/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
  <link href="/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
  <link href="/vendor/fontawesome-free-6.5.1-web/css/all.min.css" rel="stylesheet">

    <link rel="stylesheet" href="/mechanic-order.css">

    <!-- noty cdn -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"
        integrity="sha512-lOrm9FgT1LKOJRUXF3tp6QaMorJftUjowOWiDcG5GFZ/q7ukof19V0HKx/GWzXCdt9zYju3/KhBNdCLzK8b90Q=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css"
        integrity="sha512-0p3K0H3S6Q4bEWZ/WmC94Tgit2ular2/n0ESdfEX8l172YyQj8re1Wu9s/HT9T/T2osUw5Gx/6pAZNk3UKbESw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>
<body>

    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">
      <div class="container d-flex align-items-center justify-content-between">
  
        <a href="" class="logo d-flex align-items-center me-auto me-lg-0">
          <!-- Uncomment the line below if you also wish to use an image logo -->
          <!-- <img src="assets/img/logo.png" alt=""> -->
          <img src="/img/fuemech.png" alt="logo" title="logo">
        </a>
  
        <nav id="navbar" class="navbar">
          <ul>
            <li><a href="/user/home">Home</a></li>
            <li><a href="/user/fuel">Fuel</a></li>
            <li><a href="/user/mechanic">Mechanic</a></li>
            <li><a href="/user/contact-us">Contact-us</a></li>
            <li><a href="/user/myorders">Profile</a></li>
          </ul>
        </nav><!-- .navbar -->
  
        <div>
          <% if(locals.user) { %>
            <a class="btn-book-a-table" href="/user/logout" style="background-color: #19AF29; padding: 10px 30px; font-size: 17px;">Logout</a>
          <% } else { %>
            <a class="btn-book-a-table" href="/user" style="background-color: #19AF29; padding: 10px 30px; font-size: 17px;">Login</a> 
          <% } %>
      
          <% if(locals.user) { %>
            <a class="btn text-white" href="/user/changepassword" style="background-color: #19AF29; padding: 10px 30px; font-size: 17px; border-radius: 50px;">Change password</a> 
          <% } %>
        </div>
        
        <i class="mobile-nav-toggle mobile-nav-show bi bi-list"></i>
        <i class="mobile-nav-toggle mobile-nav-hide d-none bi bi-x"></i>
  
      </div>
    </header><!-- End Header -->

    <div class="contactContainer overflow-hidden">

      <div class="contactImage">
        <img class="mt-5" src="<%= mechdata.mechanicimage %>" alt="contact image"/>
      </div>
        <div class="formData">
          <span class="companyName"><%= mechdata.mname %></span><br />
  
          <form action="/user/mechorder" method="post" class="formData">

            <% var vtype=["Bike","Car","Truck","Rikshow","Tractor","Pickup truck"] %>
              <label for="vtype">Vehical type :</label>
              <select name="vtype" id="vtype" style="padding: 3px 10px 3px 5px; font-size: 15px;" required>
                <option value="">--SELECT VEHICAL TYPE</option>
                <% vtype.map((v,i) => { %>
                  <option value="<%= v %>"><%= v %></option>  
                <% }) %>
              </select>
              <br /><br />
  
            <label for="vehicle_no">Vehicle No :</label>
            <input type="text" id="vehicle_no" placeholder="GJ XX HR XXXX" name="vno" required/><br /><br />
  
            <label for="issue">About Problem</label>
            <textarea name="problem" id="issue" cols="30" rows="3" required></textarea>
            <br /><br />
  
            <div class="d-flex">
                <label for="total_price">Service charge :- </label>
                <output name="sprice" class="ms-2" style="font-size: 22px;"><%= mechdata.sprice %></output>
            </div>
  
            <div class="buttonHolder mt-4">
              <input type="submit" value="Pay now" style="background-color: #19AF29;" />
            </div>
          </form>
        </div>
      </div>


        <!-- ======= Footer ======= -->
  <footer id="footer" class="footer">

    <div class="container">
      <div class="row gy-3">

        <div class="col-lg-3 col-md-6">
          <a href="#">
            <img src="/img/fuemech.png" alt="fuemech" width="220px" height="60px">
          </a>
          <div class="mt-3">
            <h6><a href="#" class="mail" style="color: #BCBCBE;">fuemech@gmail.com</a></h6>
          </div>
        </div>

        <div class="col-lg-3 col-md-6 d-flex">
          <i class="bi bi-geo-alt icon"></i>
          <div>
            <h4>Address</h4>
            <p>
              A108 crystal park <br>
              sector-13,gurugram,hariyana 535022 - IND<br>
            </p>
          </div>
        </div>

        <div class="col-lg-3 col-md-6 footer-links d-flex">
          <i class="fa-solid fa-briefcase icon"></i>
          <div>
            <h4>Services</h4>
            <h6>Fuel delivery</h6>
            <h6>Mechanic provide</h6>
            <h6>24/7 available</h6>
          </div>
        </div>

        <div class="col-lg-3 col-md-6 footer-links">
          <h4>Follow Us</h4>
          <div class="social-links d-flex">
            <a href="#" class="twitter"><i class="bi bi-twitter"></i></a>
            <a href="#" class="facebook"><i class="bi bi-facebook"></i></a>
            <a href="#" class="instagram"><i class="bi bi-instagram"></i></a>
            <a href="#" class="linkedin"><i class="bi bi-linkedin"></i></a>
          </div>
        </div>

      </div>
    </div>

    <div class="container">
      <div class="copyright">
        &copy; Copyright <strong><span>FueMech</span></strong>. All Rights Reserved
      </div>
    </div>

  </footer><!-- End Footer -->
  <!-- End Footer -->

  <script>
    <% if(locals.flash.success.length > 0 && locals.flash.success){ %> 
  
    new Noty({
      type: 'success',
      layout: 'topRight',
      text: '<%= locals.flash.success %>',
      timeout: 2000,
      theme: 'relax'
    }).show();

    <% } %>

    <% if(locals.flash.error.length > 0 && locals.flash.error){ %> 

    new Noty({
      type: 'error',
      layout: 'topRight',
      text: '<%= locals.flash.error %>',
      timeout: 2000,
      theme: 'relax'
    }).show();

    <% } %>
</script>
  
</body>
</html>