            </ul>
          </nav><!-- .navbar -->
    
          <div>
            <% if(locals.user) { %>
              <a class="btn-book-a-table" href="/user/logout" style="background-color: #19AF29; padding: 10px 30px; font-size: 17px;">Logout</a>
