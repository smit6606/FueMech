          <i class="mobile-nav-toggle mobile-nav-hide d-none bi bi-x"></i>
    
        </div>
      </header><!-- End Header -->

      <!-- --------------------   Main Content  ------------------------ -->

    <div class="search-bar container">
        <form action="" class="d-flex">
        <input type="search" class="form-control me-2" name="search" placeholder="Search" aria-label="Search" />
        <button type="submit" class="srch-btn">Search</button>
    </form>
    </div>


    <div class="main-mech">
      <% data.map((v,i) => { %>
        <div class="main-mechanic container my-5">
          <div class="col-lg-12 col-md-12 col-sm-12"> 
            <div class="row">
              <div class="col-lg-6 inner-img col-md-6 col-sm-6">
                <img src="<%= v.mechanicimage %>" class='img-fluid'>
              </div>
              <div class="col-lg-6 inner-text p-5 col-md-6 col-sm-6">
                <h1><%= v.mname %></h1>
                <div class="location-text d-flex">
                  <i class="fa-solid fa-location-dot icon-location my-3"></i>
                  <p class='my-auto mx-4'><%= v.address %></p>
                </div>
                <p class='fw-bold mech-price'><%= v.sprice %>.00â‚¹</p>
                <a href="/user/mech_order/<%= v.id %>"><button type='submit' class='hero-btn'>Order Now</button></a>
              </div>
            </div>
          </div>
        </div>    
      <% }) %>
    </div>
    <div style="text-align: center; margin-bottom: 30px;">
      <% if(currentpage>0) { %>
        <a href="?page=<%= parseInt(currentpage)-1 %>&search=<%= search %>" name="page" class="btn text-white" style="background-color: #19AF29;">prev</a>    
      <%} %>
      <a href="?page=<%= currentpage %>&search=<%= search %>" name="page" class="btn text-white" style="background-color: #19AF29;"><%= parseInt(currentpage)+1 %></a>
      <% var next = parseInt(currentpage)+1 
      if(next<page) { %>
        <a href="?page=<%= next %>&search=<%= search %>" name="page" class="btn text-white" style="background-color: #19AF29;">next</a>    
      <% } %>
    </div>

