<body>

      <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">
      <div class="container d-flex align-items-center justify-content-between">

        <a href="/user" class="logo d-flex align-items-center me-auto me-lg-0">
          <!-- Uncomment the line below if you also wish to use an image logo -->
          <!-- <img src="assets/img/logo.png" alt=""> -->
          <img src="/img/fuemech.png" alt="logo" title="logo">
        </a>

        <nav id="navbar" class="navbar">
          <ul>
            <li><a href="/user/home">Home</a></li>
            <li><a href="/user/fuel">Fuel</a></li>
            <li><a href="/user/mechanic">Mechanic</a></li>
            <li><a href="/user/contact-us">Contact-us</a></li>
            <li><a href="/user/myorders">Profile</a></li>
          </ul>
        </nav><!-- .navbar -->

        <div>
          <% if(locals.user) { %>
            <a class="btn-book-a-table" href="/user/logout" style="background-color: #19AF29; padding: 10px 30px; font-size: 17px;">Logout</a>
          <% } else { %>
            <a class="btn-book-a-table" href="/user" style="background-color: #19AF29; padding: 10px 30px; font-size: 17px;">Login</a> 
          <% } %>
      
          <% if(locals.user) { %>
            <a class="btn text-white" href="/user/changepassword" style="background-color: #19AF29; padding: 10px 30px; font-size: 17px; border-radius: 50px;">Change password</a> 
          <% } %>
        </div>
        <i class="mobile-nav-toggle mobile-nav-show bi bi-list"></i>
        <i class="mobile-nav-toggle mobile-nav-hide d-none bi bi-x"></i>

      </div>
    </header><!-- End Header -->

  <!-- Main Section -->

  <div class="container" style="margin-top: 100px;">
    <h1 class="text-center">Edit Details</h1>
    <form action="/user/update/<%= data.id %>" method="post" enctype="multipart/form-data">
        <table class="table">
            <% var name = data.name.split(" ") %>
          <tbody>
            <tr>
              <th scope="row">First name:</th>
              <td><input type="text" name="fname" value="<%= name[0] %>"></td>
            </tr>
            <tr>
                <th scope="row">Last name:</th>
                <td><input type="text" name="lname" value="<%= name[1] %>"></td>
              </tr>
            <tr>
              <th scope="row">Email:</th>
              <td><input type="email" name="email" value="<%= data.email %>"></td>
            </tr>
            <tr>
              <th scope="row">Mobile Number:</th>
              <td><input type="tel" name="mno" value="<%= data.mno %>"></td>
            </tr>
            <tr>
              <th scope="row">Gender:</th>
              <td>
                <label><input type="radio" name="gender" value="male" <%= data.gender === 'male' ? 'checked' : '' %>> Male</label>
                <label><input type="radio" name="gender" value="female" <%= data.gender === 'female' ? 'checked' : '' %>> Female</label>
              </td>
            </tr>
            <tr>
              <th scope="row">Image:</th>
              <td>
                <input type="file" name="userimage"><br>
                <img src="<%= data.userimage %>" alt="userimage" width="100px" >
               </td>
            </tr>
          </tbody>
        </table>
        <div class="text-center">
          <button type="submit" style="background-color: #19AF29;" class="btn text-white">Update</button>
        </div>
      </form>
  </div>

  <!-- ======= Footer ======= -->
