    <div class="container">
      <div class="row gy-3">

        <div class="col-lg-3 col-md-6">
          <a href="#">
            <img src="/img/fuemech.png" alt="fuemech" width="220px" height="60px">
          </a>
          <div class="mt-3">
            <h6><a class="email" href="#" style="color: #BCBCBE;">fuemech@gmail.com</a></h6>
          </div>
        </div>

        <div class="col-lg-3 col-md-6 d-flex">
          <i class="bi bi-geo-alt icon"></i>
          <div>
            <h4>Address</h4>
            <p>
              A108 crystal park <br>
              sector-13,gurugram,hariyana 535022 - IND<br>
            </p>
          </div>
        </div>

        <div class="col-lg-3 col-md-6 footer-links d-flex">
          <i class="fa-solid fa-briefcase icon"></i>
          <div>
            <h4>Services</h4>
