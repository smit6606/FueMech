  <script>

    const total_price = document.getElementById('total_price');
    const output_price = document.getElementById('output_price');

    total_price.addEventListener('input', function() {
      output_price.innerHTML = total_price.value;
    });

  </script>

      <script>
        $(document).ready(function(){
    // Add change event listener to radio buttons and quantity select
    $('input[type=radio][name=fuel], #quantity').change(function() {
        var fuelType = $('input[type=radio][name=ftype]:checked').val();
        var fuelPrice = (fuelType === 'petrol') ? <%= fueldata.pprice %> : <%= fueldata.dprice %>;
        var quantity = $('#quantity').val();
        var totalPrice = fuelPrice * quantity;
        $('#total_price').val(totalPrice);
        $('#output_price').text(totalPrice);
    });
});
      </script>

<script>
