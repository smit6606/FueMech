    <div class="contactContainer overflow-hidden">
        <img class="contactImage" src="<%= fueldata.fuelimage %>" alt="contact image"/>
        <div class="formData">
          <span class="companyName"><%= fueldata.fname %></span><br />

          <div id="rate">
            <p class="rate">Petrol price :- &#8377; <%= fueldata.pprice %>.00</p>
            <p class="rate">Diesel price :- &#8377;<%= fueldata.dprice %>.00</p>
          </div>

          <div class="info">
            <form action="/user/fuelorder" method="post" class="formData">

              <br/><br/>

              <% var vtype=["Bike","Car","Truck","Rikshow","Tractor","Pickup truck"] %>
              <label for="vtype">Vehical type :</label>
              <select name="vtype" id="vtype" style="padding: 3px 10px 3px 5px; font-size: 15px;" required autofocus>
                <option value="">--SELECT VEHICAL TYPE</option>
                <% vtype.map((v,i) => { %>
                  <option value="<%= v %>"><%= v %></option>  
                <% }) %>
              </select>

              <br/><br/>

              <label for="vehicle_no">Vehicle No :</label>
              <input type="text" id="vehicle_no" placeholder="GJ XX HR XXXX" name="vno" required/><br /><br/>

              <h5>Select fuel type</h5>
              <div class="d-flex">
                <input type="radio" value="petrol" id="fuel1" name="ftype" required/> <label for="fuel1" class="ms-1">Petrol</label> 
              </div>
              <div class="d-flex">
                <input type="radio" value="diesel" id="fuel2" name="ftype" required/> <label for="fuel2" class="ms-1">Diesel</label> 
              </div>
              <br />

              <label for="quantity">Quantity</label>
              <input type="text" placeholder="Enter quantity like 1 or 2" id="quantity" name="quantity" required/>
              <br /><br/>

              <!-- <label for="total_price" >Total Price</label> -->
              <div class="d-flex align-items-center">
                <label for="total_price">Total Price :- </label> &nbsp;
                <input type="hidden" class="fs-3" id="total_price" name="price" /><i class="fa-solid fa-indian-rupee-sign fs-3 mx-2"></i><output class="fs-1" for="total_price" id="output_price"></output>
              </div><br/>
              <div class="buttonHolder mt-3">
                <button class="btn text-white" style="background-color: #19AF29;">Pay now</button>
              </div>
            </form>
          </div>
        </div>
      </div>



