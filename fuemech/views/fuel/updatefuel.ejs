<%- include('header') %>
    <!-- HEADER DESKTOP-->

    

    <!-- MAIN CONTENT-->
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="mt-5 col-sm-12 col-xl-12">
                        <div class="bg-white rounded h-100 p-4">
                            <h6 class="mb-4">Update data</h6>
                            <form method="post" action="/fuel/edit/<%= adata.id %>" enctype="multipart/form-data">
                                <div class="row mb-3">
                                    <label for="email" class="col-sm-2 col-form-label">Name</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="mname" name="fname" value="<%= adata.fname %>">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="email" class="col-sm-2 col-form-label">Email</label>
                                    <div class="col-sm-10">
                                        <input type="email" class="form-control" id="email" name="email" value="<%= adata.email %>">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="mno" class="col-sm-2 col-form-label">Mobile number</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="mno" name="mno" value="<%= adata.mno %>">
                                    </div>
                                </div>
                                <% var landmark=["yogichowk","chikuvadi","punagama","motavarachha","nanavarachha","simada"] %>
                                <div class="row form-group">
                                    <div class="col col-md-2">
                                        <label for="select" class=" form-control-label">Select Landmark</label>
                                    </div>
                                    <div class="col-12 col-md-10">
                                        <select name="landmark" id="select" class="form-control">
                                            <option value="0">--Select Landmark--</option>
                                            <% landmark.map((v,i)=>{ %>
                                                <option value="<%= v %>" <% if(adata.landmark==v) { %>
                                                    <%= 'selected' %>
                                                        <% } %> >
                                                            <%= v %>
                                                </option>
                                                <% }) %>
                                        </select>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="email" class="col-sm-2 col-form-label">Address</label>
                                    <div class="col-sm-10">
                                        <textarea name="address" id="" cols="50" rows="5" style="border: 1px solid black;"><%= adata.address %></textarea>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="email" class="col-sm-2 col-form-label">Petrol price</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="email" name="pprice" value="<%= adata.pprice %>">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="email" class="col-sm-2 col-form-label">Diesel price</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="email" name="dprice" value="<%= adata.dprice %>">
                                    </div>
                                </div>
                                <div class="mt-3 mb-3">
                                    <label for="formFile" class="form-label">Select image</label>
                                    <input class="form-control" type="file" id="formFile" name="fuelimage">
                                </div>
                                <img src="<%= adata.fuelimage %>" alt="image" title="image" style="height: 100px; width: 100px;"><br/>
                                <button type="submit" class="btn mt-5" style="background-color: #19AF29; color: white;">Update</button>
                            </form>
                        </div>
                    </div>
                </div>
                <%- include('footer') %>