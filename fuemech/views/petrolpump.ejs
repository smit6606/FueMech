<%- include('header') %>
<!-- END HEADER DESKTOP-->

<!-- MAIN CONTENT-->
<div class="main-content">
    <div class="m-3 ml-5">
        <form class="form-header">
            <input class="au-input au-input--xl" type="text" name="search" placeholder="Search for name, mobile number, emails, landmark &amp; address..." />
            <button class="au-btn--submit" style="background-color: #19AF29;">
                <i class="zmdi zmdi-search"></i>
            </button>
        </form>
    </div>
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="table-responsive table--no-card m-b-30">
                        <table class="table table-borderless table-striped table-earning">
                            <thead>
                                <tr>
                                    <th>Number</th>
                                    <th>Petrol pump name</th>
                                    <th>Email</th>
                                    <th>Mobile Number</th>
                                    <th>Landmark</th>
                                    <th>Address</th>
                                    <th>Petrol price</th>
                                    <th>Diesel price</th>
                                    <th>Average Rating</th>
                                    <th>Image</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% var j=0 %>
                                <% data.map((v,i) => { %>
                                    <tr>
                                        <td><%= ++j %></td>
                                        <td><%= v.fname %></td>
                                        <td><%= v.email %></td>
                                        <td><%= v.mno %></td>
                                        <td><%= v.landmark %></td>
                                        <td><%= v.address %></td>
                                        <td><%= v.pprice %></td>
                                        <td><%= v.dprice %></td>
                                        <td>
                                            <% if (averageRatings[v.id]) { %>
                                                <%= averageRatings[v.id].averageRating %>
                                            <% } else { %>
                                                N/A
                                            <% } %>
                                        </td>
                                        <td>
                                            <img src="<%= v.fuelimage %>" alt="image" title="name" height="200" width="200">
                                        </td>
                                        <td>
                                            <% if(v.status) { %>
                                                <a href="/admin/fueldeactive/<%= v.id %>" class="btn btn-success">Active</a>
                                            <% } else { %>
                                                <a href="/admin/fuelactive/<%= v.id %>" class="btn btn-danger">Deactive</a>
                                            <% } %>
                                        </td>
                                        <td align="center">
                                            <a href="/admin/fueldelete/<%= v.id %>"><i class="fa fa-trash text-danger"></i></a>
                                        </td>
                                    </tr>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                    <div style="text-align: center;">
                        <% if(currentpage>0) { %>
                            <a href="?page=<%= parseInt(currentpage)-1 %>&search=<%= search %>" name="page" class="btn btn-success">prev</a>
                        <%} %>
                        <a href="?page=<%= currentpage %>&search=<%= search %>" name="page" class="btn btn-success"><%= parseInt(currentpage)+1 %></a>
                        <% var next = parseInt(currentpage)+1
                        if(next<page) { %>
                            <a href="?page=<%= next %>&search=<%= search %>" name="page" class="btn btn-success">next</a>
                        <% } %>
                    </div>
                </div>
                <%- include('footer') %>
